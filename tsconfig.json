{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx", // ✅ modern JSX runtime (no need to import React in every file)
    "moduleResolution": "bundler", // ✅ compatible with Expo/Metro
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base",
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}
